<Window x:Class="GUI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
    <TextBlock Text="Custom Dialog Box" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
    <TextBox x:Name="InputField" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,20,0,0"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
        <Button x:Name="OkButton" Content="OK" Click="OkButton_Click" Margin="10,0,10,0"/>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="10,0,10,0"/>
    </StackPanel>
</Grid>
</Window>
